%div.row.center
	%div.large-3.columns.large-centered
		= form_for @bid, :remote => true do |f|
			= f.label :Your_position_in_Queue
			= f.number_field :qposition, :autofocus => true
			= f.label :bid_equal_or_below_offer_price
			= f.number_field :bid_price, :placeholder => 'Lesser $ awarded to you'
			/ = f.hidden_field :offer, :id
			= hidden_field_tag('bid[offer_id]', @offer.id)
			= f.submit nil, :class => 'button success radius'
	%div.large-9.columns
