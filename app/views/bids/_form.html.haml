%div.row
	%div.large-3.columns
		= form_for @bid, :remote => true do |f|
			= f.label :Position_in_Queue
			= f.number_field :qposition, :autofocus => true
			= f.label :bid_price
			= f.number_field :bid_price, :placeholder => '$'
			/ = f.hidden_field :offer, :id
			= hidden_field_tag('bid[offer_id]', @offer.id)
			= f.submit nil, :class => 'button success radius'
	%div.large-9.columns
