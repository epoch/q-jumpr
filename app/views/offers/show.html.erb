<h2 id="offer_name"><%= @offer.name %></h2> 
	<p id="offer_address"><%= @offer.address %> <%= @offer.date %></p>
		<div id="offer_enddate">Expires: <%= @offer.enddate %></div>
		<p id="offer_price">Offered @: <%= number_to_currency(@offer.price) %></p>

		<div id="new_bid"></div>
	<p>
		<button id="first_bid" class="button success round"><%= link_to('Bid on Event Queue', new_bid_path(@offer)) %></button>
	</p>
	<div id="bids"><%= render(:partial => '/bids/bids') %></div>
<script>

	$('#first_bid').on('click', function () {

		$('#new_bid').html('<%=j render(:partial => '/bids/form') %>');
		$('#first_bid').fadeOut();
		return false;
	});

</script>
	
